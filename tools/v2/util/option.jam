import modules ;

rule get ( name : default-value ? )
{
    local m = [ MATCH --$(name)=(.*) : [ modules.peek : ARGV ] ] ;
    if $(m)
    {
        return $(m[1]) ;
    }
    else
    {
        return $(default-value) ;
    }        
}

